extends layout

block content
  h1 Notes!
  br
  each val in (locals.notes)
    form(role='form', accept-charset='utf-8', action='/notes/delete/' + val.id, method='post')
      div.panel.panel-default
        div.panel-heading.clearfix
          h3.panel-title.pull-left= "(" + val.edited + ") " + val.title
          div.btn-group.pull-right
            div.col-sm-8
              input(name='delete', type='submit', value='Delete', onclick='if (!confirm("Are you sure you want to delete this note?")) return false')
        div.panel-body
          p.noteCondensed= val.summary
        div.panel-footer.clearfix
          a.btn.btn-default.btn-sm(href='/update/' + val.id) Edit
          a.btn.btn-default.btn-sm(href='/preview/' + val.id) View
